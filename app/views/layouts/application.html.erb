<!DOCTYPE html>
<html>
<head>
  <title>Toeicfive</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if current_user %>
  <div class="content">
    <div class="user_info">
      <img src="<%= current_user.image_path %>"/>&nbsp;&nbsp;|<%= current_user.name %>
    </div> 
    <%= render 'common/menu' %>
    <hr/>
    <%= yield %>
  </div>
<% else %>
  <div class="content">
    <%= link_to "Facebook LOGIN and participate in toeic-five. ", "/login" %>
  </div>
<% end %>
</body>
</html>

